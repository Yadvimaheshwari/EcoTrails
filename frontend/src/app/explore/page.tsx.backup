// Module 1: Exploration Progress
function ExplorationProgress({ stats }: { stats: DashboardStats }) {
  const totalParks = 10; // Example max
  const totalTrails = 10; // Example max
  const parksProgress = Math.min((stats.parks_explored / totalParks) * 100, 100);
  const trailsProgress = Math.min((stats.trails_completed / totalTrails) * 100, 100);
  const completionProgress = stats.total_hikes > 0 
    ? Math.round((stats.completed_hikes / stats.total_hikes) * 100) 
    : 0;
  
  const difficulties = ['easy', 'moderate', 'hard', 'expert'];
  const difficultyColors = {
    easy: '#4F8A6B', // moss green
    moderate: '#4A9B9B', // teal
    hard: '#4C7EF3', // alpine blue
    expert: '#F4A340', // sunrise amber
  };
  
  // Find highest completed difficulty
  const completedDifficulties = Object.keys(stats.difficulty_progression).filter(
    diff => stats.difficulty_progression[diff] > 0
  );
  const highestCompleted = completedDifficulties.length > 0 
    ? completedDifficulties[completedDifficulties.length - 1]
    : null;
  
  return (
    <div className="mb-8 sm:mb-12">
      <h2 className="text-xl sm:text-2xl font-light mb-4 sm:mb-6 text-text">Your exploration journey</h2>
      
      <div className="space-y-4 sm:space-y-6 mb-6 sm:mb-8">
        <div>
          <div className="flex justify-between items-center mb-2">
            <span className="text-sm font-medium text-text">Parks visited</span>
            <span className="text-xs text-textSecondary">{stats.parks_explored || 0}</span>
          </div>
          <div className="flex gap-1">
            {Array.from({ length: totalParks }).map((_, i) => (
              <div
                key={i}
                className="flex-1 h-2 rounded-full transition-all duration-500"
                style={{
                  backgroundColor: i < (stats.parks_explored || 0) ? '#4F8A6B' : '#E8E8E3',
                }}
              />
            ))}
          </div>
        </div>
        
        <div>
          <div className="flex justify-between items-center mb-2">
            <span className="text-sm font-medium text-text">Trails completed</span>
            <span className="text-xs text-textSecondary">{stats.trails_completed || 0}</span>
          </div>
          <div className="flex gap-1">
            {Array.from({ length: totalTrails }).map((_, i) => (
              <div
                key={i}
                className="flex-1 h-2 rounded-full transition-all duration-500"
                style={{
                  backgroundColor: i < (stats.trails_completed || 0) ? '#4F8A6B' : '#E8E8E3',
                }}
              />
            ))}
          </div>
        </div>
        
        <div>
          <div className="flex justify-between items-center mb-2">
            <span className="text-sm font-medium text-text">Completion progress</span>
            <span className="text-xs text-textSecondary">{completionProgress}%</span>
          </div>
          <div className="w-full bg-surface rounded-full h-2 overflow-hidden">
            <div 
              className="h-full rounded-full transition-all duration-1000 ease-out"
              style={{ 
                width: `${completionProgress}%`,
                backgroundColor: '#4F8A6B'
              }}
            />
          </div>
        </div>
      </div>
      
      {/* Difficulty Progression Path */}
      <div className="relative">
        <div className="flex items-center justify-between mb-4">
          {difficulties.map((diff, idx) => {
            const isCompleted = (stats.difficulty_progression[diff] || 0) > 0;
            const isActive = highestCompleted === diff;
            const isLocked = !isCompleted && idx > 0 && !difficulties.slice(0, idx).some(d => (stats.difficulty_progression[d] || 0) > 0);
            
            return (
              <div key={diff} className="flex-1 flex flex-col items-center relative">
                <div className="flex items-center w-full">
                  {idx > 0 && (
                    <div 
                      className="flex-1 h-0.5 mx-2"
                      style={{
                        backgroundColor: isCompleted ? difficultyColors[diff as keyof typeof difficultyColors] : '#E8E8E3',
                        opacity: isCompleted ? 1 : 0.3,
                      }}
                    />
                  )}
                  <div className="relative group">
                    <div
                      className={`w-8 h-8 rounded-full flex items-center justify-center transition-all ${
                        isLocked ? 'opacity-40' : ''
                      }`}
                      style={{
                        backgroundColor: isCompleted 
                          ? difficultyColors[diff as keyof typeof difficultyColors]
                          : '#E8E8E3',
                        boxShadow: isActive ? `0 0 12px ${difficultyColors[diff as keyof typeof difficultyColors]}40` : 'none',
                      }}
                    >
                      {isLocked ? (
                        <span className="text-xs text-textSecondary">üîí</span>
                      ) : (
                        <div 
                          className="w-4 h-4 rounded-full"
                          style={{
                            backgroundColor: isCompleted ? '#FFFFFF' : '#9B9B98',
                          }}
                        />
                      )}
                    </div>
                    {isLocked && (
                      <div className="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-1 bg-text text-white text-xs rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                        Complete {difficulties[idx - 1]} trails to unlock
                      </div>
                    )}
                  </div>
                  {idx < difficulties.length - 1 && (
                    <div 
                      className="flex-1 h-0.5 ml-2"
                      style={{
                        backgroundColor: isCompleted ? difficultyColors[diff as keyof typeof difficultyColors] : '#E8E8E3',
                        opacity: isCompleted ? 1 : 0.3,
                      }}
                    />
                  )}
                </div>
                <div className="mt-2 text-center">
                  <div className="text-xs font-medium capitalize text-text">{diff}</div>
                  <div className="text-xs text-textSecondary">{stats.difficulty_progression[diff] || 0}</div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  );
}

