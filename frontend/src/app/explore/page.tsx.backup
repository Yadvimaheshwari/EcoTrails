export default function ExplorePage() {
  const { user, isLoading } = useAuth();
  const router = useRouter();
  const [query, setQuery] = useState('');
  const [places, setPlaces] = useState<any[]>([]);
  const [trails, setTrails] = useState<any[]>([]);
  const [loading, setLoading] = useState(false);
  const [dashboardStats, setDashboardStats] = useState<DashboardStats | null>(null);
  const [loadingStats, setLoadingStats] = useState(true);
  const [nearbyPlaces, setNearbyPlaces] = useState<any[]>([]);
  const [showTypeahead, setShowTypeahead] = useState(false);
  const [typeaheadResults, setTypeaheadResults] = useState<any[]>([]);
  const searchInputRef = useRef<HTMLInputElement>(null);
  const searchContainerRef = useRef<HTMLDivElement>(null);
  const [showDiscoveryDemo, setShowDiscoveryDemo] = useState(false);
  const [showVoiceDemo, setShowVoiceDemo] = useState(false);

  useEffect(() => {
    if (!isLoading && !user) {
      router.push('/login');
    }
  }, [user, isLoading, router]);

  useEffect(() => {
    const loadDashboardStats = async () => {
      if (!user) return;
      try {
        setLoadingStats(true);
        const response = await getDashboardStats();
        if (response.data) {
          setDashboardStats(response.data);
        }
      } catch (error) {
        console.error('Failed to load dashboard stats:', error);
        setDashboardStats({
          parks_explored: 0,
          trails_completed: 0,
          elevation_gained_feet: 0,
          rare_discoveries: 0,
          last_park: null,
          difficulty_progression: {},
          places_visited: [],
          discoveries_by_type: {},
          total_hikes: 0,
          completed_hikes: 0,
          explorer_level: 'Beginner',
          next_milestone: 'First trail completed',
          next_milestone_points: 20,
          current_points: 0,
          recent_activity: [],
          active_hikes: 0,
          upcoming_trips: 0,
          total_discoveries: 0,
        });
      } finally {
        setLoadingStats(false);
      }
    };
    
    loadDashboardStats();
    
    // Refresh stats every 5 seconds for real-time updates
    const statsInterval = setInterval(() => {
      loadDashboardStats();
    }, 5000);
    
    // Also refresh when page becomes visible (user returns from hike)
    const handleVisibilityChange = () => {
      if (!document.hidden) {
        loadDashboardStats();
      }
    };
    document.addEventListener('visibilitychange', handleVisibilityChange);
    
    // Load nearby places if geolocation is available
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
        async (position) => {
          try {
            const response = await findNearbyPlaces(
              position.coords.latitude,
              position.coords.longitude,
              50,
              5
            );
            if (response.data && Array.isArray(response.data)) {
              setNearbyPlaces(response.data);
            }
          } catch (error) {
            console.error('Failed to load nearby places:', error);
          }
        },
        () => {
          // Silently fail if geolocation is denied
        }
      );
    }
    
    return () => {
      clearInterval(statsInterval);
      document.removeEventListener('visibilitychange', handleVisibilityChange);
    };
  }, [user]);

  // Handle Escape key to clear search
  useEffect(() => {
    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === 'Escape') {
        clearSearch();
      }
    };
    window.addEventListener('keydown', handleEscape);
    return () => window.removeEventListener('keydown', handleEscape);
  }, []);

  // Handle click outside to close typeahead
  useEffect(() => {
    const handleClickOutside = (e: MouseEvent) => {
      if (searchContainerRef.current && !searchContainerRef.current.contains(e.target as Node)) {
        setShowTypeahead(false);
      }
    };
    document.addEventListener('mousedown', handleClickOutside);
    return () => document.removeEventListener('mousedown', handleClickOutside);
  }, []);

  // Typeahead search while typing
  useEffect(() => {
    if (!query.trim()) {
      setShowTypeahead(false);
      setTypeaheadResults([]);
      return;
    }

    const timeoutId = setTimeout(async () => {
      try {
        let searchQuery = query.trim();
        const parkKeywords = ['national park', 'state park', 'national monument', 'national forest'];
        const hasParkKeyword = parkKeywords.some(keyword => 
          searchQuery.toLowerCase().includes(keyword)
        );
        
        if (!hasParkKeyword && searchQuery.length > 2) {
          searchQuery = `${searchQuery} national park OR state park USA`;
        }
        
        if (searchQuery.length > 2) {
          const placesRes = await searchPlaces(searchQuery, 5); // Limit to 5 for typeahead
          
          let placesArray = [];
          if (placesRes.data) {
            if (Array.isArray(placesRes.data.places)) {
              placesArray = placesRes.data.places;
            } else if (Array.isArray(placesRes.data)) {
              placesArray = placesRes.data;
            } else if (placesRes.data.places && Array.isArray(placesRes.data.places)) {
              placesArray = placesRes.data.places;
            }
            
            placesArray = placesArray.filter((place: any) => {
              const name = (place.name || '').toLowerCase();
              const type = (place.place_type || place.type || '').toLowerCase();
              return (
                name.includes('national park') ||
                name.includes('state park') ||
                name.includes('national monument') ||
                name.includes('national forest') ||
                type.includes('park')
              );
            }).slice(0, 5);
          }
          
          setTypeaheadResults(placesArray);
          setShowTypeahead(placesArray.length > 0);
        }
      } catch (error) {
        console.error('Typeahead search failed:', error);
        setShowTypeahead(false);
      }
    }, 300); // Debounce 300ms

    return () => clearTimeout(timeoutId);
  }, [query]);

  const clearSearch = () => {
    setQuery('');
    setPlaces([]);
    setTrails([]);
    setShowTypeahead(false);
    setTypeaheadResults([]);
    searchInputRef.current?.focus();
  };

  const handleSearch = async (e: React.FormEvent | { preventDefault: () => void }) => {
    if (e && 'preventDefault' in e) {
      e.preventDefault();
    }
    if (!query.trim()) {
      clearSearch();
      return;
    }

    setLoading(true);
    setShowTypeahead(false);
    setPlaces([]);
    setTrails([]);
    try {
      let searchQuery = query.trim();
      const parkKeywords = ['national park', 'state park', 'national monument', 'national forest'];
      const hasParkKeyword = parkKeywords.some(keyword => 
        searchQuery.toLowerCase().includes(keyword)
      );
      
      if (!hasParkKeyword) {
        searchQuery = `${searchQuery} national park OR state park USA`;
      }
      
