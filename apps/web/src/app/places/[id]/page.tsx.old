// Helper function to get Google Maps photo URL via backend proxy
async function getGoogleMapsPhotoUrl(placeId: string, photoReference: string, maxWidth: number = 800): Promise<string> {
  try {
    const response = await fetch(
      `${process.env.NEXT_PUBLIC_API_URL || 'http://localhost:8000'}/api/v1/places/${placeId}/photo?photo_reference=${photoReference}&max_width=${maxWidth}`
    );
    if (response.ok) {
      const data = await response.json();
      return data.url;
    }
  } catch (error) {
    console.error('Failed to get photo URL:', error);
  }
  return '';
}

// Helper to get terrain type and colors
function getTerrainInfo(place: any) {
  const name = (place.name || '').toLowerCase();
  const description = (place.description || '').toLowerCase();
  
  if (name.includes('canyon') || description.includes('canyon')) {
    return {
      type: 'canyon',
      gradient: 'linear-gradient(135deg, #D4A574 0%, #B8860B 100%)',
      colors: { primary: '#D4A574', secondary: '#B8860B' }
    };
  }
  if (name.includes('forest') || description.includes('forest')) {
    return {
      type: 'forest',
      gradient: 'linear-gradient(135deg, #4F8A6B 0%, #0F3D2E 100%)',
      colors: { primary: '#4F8A6B', secondary: '#0F3D2E' }
    };
  }
  if (name.includes('alpine') || description.includes('alpine') || description.includes('mountain')) {
    return {
      type: 'alpine',
      gradient: 'linear-gradient(135deg, #4C7EF3 0%, #2E5CC8 100%)',
      colors: { primary: '#4C7EF3', secondary: '#2E5CC8' }
    };
  }
  if (name.includes('desert') || description.includes('desert')) {
    return {
      type: 'desert',
      gradient: 'linear-gradient(135deg, #F4D03F 0%, #E67E22 100%)',
      colors: { primary: '#F4D03F', secondary: '#E67E22' }
    };
  }
  
  return {
    type: 'default',
    gradient: 'linear-gradient(135deg, #6B8E6B 0%, #4F8A6B 100%)',
    colors: { primary: '#6B8E6B', secondary: '#4F8A6B' }
  };
}

// Helper to determine trail readiness
function getTrailReadiness(trails: any[]) {
  const difficulties = trails.map(t => t.difficulty?.toLowerCase()).filter(Boolean);
  const hasEasy = difficulties.includes('easy');
  const hasModerate = difficulties.includes('moderate');
  const hasHard = difficulties.includes('hard') || difficulties.includes('expert');
  
  const badges = [];
  if (hasEasy) badges.push('Beginner friendly');
  if (hasModerate) badges.push('Moderate terrain');
  if (hasHard) badges.push('Expert exposure');
  
  return badges;
}

// Helper to get exploration insights
function getExplorationInsights(place: any, weather: any) {
  const insights = [];
  const month = new Date().getMonth();
  
  if (month >= 3 && month <= 9) {
    insights.push('Best season: April ‚Äì October');
  } else {
    insights.push('Best season: May ‚Äì September');
  }
  
  insights.push('Sunrise hikes recommended');
  
  if (place.description?.toLowerCase().includes('shade')) {
    insights.push('Limited shade');
  } else {
    insights.push('Moderate shade available');
  }
  
  insights.push('High visitor traffic weekends');
  insights.push('Wildlife sightings reported');
  
  return insights;
}

// Helper to get discovery potential
function getDiscoveryPotential(place: any) {
  const name = (place.name || '').toLowerCase();
  const description = (place.description || '').toLowerCase();
  
  const discoveries = [];
  
  if (name.includes('wildlife') || description.includes('wildlife') || description.includes('animal')) {
    discoveries.push({ icon: 'ü¶å', label: 'Wildlife', type: 'wildlife' });
  }
  if (description.includes('plant') || description.includes('vegetation') || description.includes('tree')) {
    discoveries.push({ icon: 'üåø', label: 'Desert vegetation', type: 'plant' });
  }
  if (description.includes('rock') || description.includes('geology') || description.includes('formation')) {
    discoveries.push({ icon: 'ü™®', label: 'Sedimentary rock layers', type: 'geology' });
  }
  if (description.includes('history') || description.includes('indigenous') || description.includes('cultural')) {
    discoveries.push({ icon: 'üèõ', label: 'Indigenous history nearby', type: 'cultural' });
  }
  
  // Default discoveries if none found
  if (discoveries.length === 0) {
    discoveries.push(
      { icon: 'ü¶å', label: 'Wildlife', type: 'wildlife' },
      { icon: 'üåø', label: 'Vegetation', type: 'plant' },
      { icon: 'ü™®', label: 'Geology', type: 'geology' },
      { icon: 'üèõ', label: 'History', type: 'cultural' }
    );
  }
  
  return discoveries;
}

