              </div>
            )}

            {/* Achievements View */}
            {currentView === 'achievements' && (
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {achievements.map((achievement: Achievement) => (
                  <div
                    key={achievement.id}
                    className="p-6 rounded-2xl"
                    style={{ backgroundColor: '#FFFFFF', border: '1px solid #E8E8E3' }}
                  >
                    <div className="text-4xl mb-3">üèÜ</div>
                    <h3 className="text-xl font-medium text-text mb-2">
                      {achievement.achievement?.name || achievement.name}
                    </h3>
                    <p className="text-sm text-textSecondary mb-3">
                      {achievement.achievement?.description || achievement.description}
                    </p>
                    <p className="text-xs text-textSecondary">
                      {achievement.unlocked_at && `Unlocked ${format(new Date(achievement.unlocked_at), 'MMM d, yyyy')}`}
                      {achievement.unlockedAt && `Unlocked ${format(new Date(achievement.unlockedAt), 'MMM d, yyyy')}`}
                    </p>
                  </div>
                ))}
                {achievements.length === 0 && (
                  <EmptyState
                    icon="üèÜ"
                    title="No achievements yet"
                    message="Complete hikes to unlock achievements"
                  />
                )}
              </div>
            )}
          </>
        )}
      </div>
    </BackgroundSystem>
  );
}
