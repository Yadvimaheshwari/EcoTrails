function renderCompletedHikeDetails(
  hike: Hike, 
  hikeEntry: JournalEntry | undefined, 
  achievements: Achievement[], 
  uploadProgress: Record<string, number>, 
  uploadErrors: Record<string, { message: string; retry: () => void }>, 
  setShowReflectionModal: (show: boolean) => void,
  setReflectionHike: (hike: Hike | null) => void,
  setReflectionEntry: (entry: JournalEntry | null) => void,
  handleMediaUpload: (hikeId: string, file: File, type: 'photo' | 'video' | 'audio', retryCount?: number) => Promise<void>, 
  uploadingMedia: string | null, 
  loadData: () => Promise<void>
) {
  const metadata = hikeEntry?.meta_data || {};
  
  return (
    <div className="space-y-6">
      {/* Summary with Real Data */}
      <div className="animate-fade-up">
        <h4 className="text-lg font-medium text-text mb-3">Summary</h4>
        <div className="p-4 rounded-xl transition-all hover:shadow-md" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
          {hike.route_points && hike.route_points.length > 0 ? (
            <div className="space-y-2 text-sm">
              <div className="flex justify-between">
                <span className="text-textSecondary">Distance</span>
                <span className="font-medium text-text">
                  {hike.route_points.reduce((total: number, point: any, idx: number, arr: any[]) => {
                    if (idx === 0) return 0;
                    const prev = arr[idx - 1];
                    if (prev.latitude && prev.longitude && point.latitude && point.longitude) {
                      const R = 3959;
                      const dLat = (point.latitude - prev.latitude) * Math.PI / 180;
                      const dLon = (point.longitude - prev.longitude) * Math.PI / 180;
                      const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
                                Math.cos(prev.latitude * Math.PI / 180) * Math.cos(point.latitude * Math.PI / 180) *
                                Math.sin(dLon/2) * Math.sin(dLon/2);
                      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
                      return total + R * c;
                    }
                    return total;
                  }, 0).toFixed(2)} miles
                </span>
              </div>
              {hike.max_altitude_feet && (
                <div className="flex justify-between">
                  <span className="text-textSecondary">Elevation Gain</span>
                  <span className="font-medium text-text">{hike.elevation_gain_feet || 0} ft</span>
                </div>
              )}
            </div>
          ) : (
            <p className="text-sm text-textSecondary">No route data available</p>
          )}
        </div>
      </div>

      {/* Media Gallery */}
      {hike.media && hike.media.length > 0 && (
        <div>
          <h4 className="text-lg font-medium text-text mb-3">Media</h4>
          <div className="grid grid-cols-2 md:grid-cols-3 gap-3">
            {hike.media.map((item: Media) => (
              <div key={item.id} className="relative aspect-square rounded-xl overflow-hidden bg-gray-100">
                {item.type === 'photo' && item.url ? (
                  <img src={item.url} alt="Hike photo" className="w-full h-full object-cover" />
                ) : item.type === 'video' && item.url ? (
                  <video src={item.url} className="w-full h-full object-cover" controls />
                ) : (
                  <div className="w-full h-full flex items-center justify-center text-textSecondary">
                    {item.type === 'audio' ? 'üéµ' : 'üì∑'}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )}

      {/* Achievements */}
      {achievements.filter(a => a.hike_id === hike.id).length > 0 && (
        <div>
          <h4 className="text-lg font-medium text-text mb-3">Achievements</h4>
          <div className="flex flex-wrap gap-2">
            {achievements.filter(a => a.hike_id === hike.id).map((achievement: Achievement) => (
              <div key={achievement.id} className="px-3 py-1 rounded-full text-sm" style={{ backgroundColor: '#FFF8F0', border: '1px solid #F4A34040' }}>
                {achievement.achievement?.name || achievement.name}
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  );
}

export default function JournalPage() {
  const { user, isLoading } = useAuth();
  const router = useRouter();
  const searchParams = useSearchParams();
  const [completedHikes, setCompletedHikes] = useState<Hike[]>([]);
  const [activeHikes, setActiveHikes] = useState<Hike[]>([]);
  const [achievements, setAchievements] = useState<Achievement[]>([]);
  const [journalEntries, setJournalEntries] = useState<JournalEntry[]>([]);
  const [tripPlans, setTripPlans] = useState<JournalEntry[]>([]);
  const [favorites, setFavorites] = useState<Favorite[]>([]);
  const [allDiscoveries, setAllDiscoveries] = useState<Discovery[]>([]);
  const [currentView, setCurrentView] = useState<JournalView>('timeline');
  const [loading, setLoading] = useState(true);
  const [celebratingHike, setCelebratingHike] = useState<Hike | null>(null);
  const [showCelebration, setShowCelebration] = useState(false);
  const [expandedTripPlan, setExpandedTripPlan] = useState<string | null>(null);
  const [expandedHike, setExpandedHike] = useState<string | null>(null);
  const [discoveryFilter, setDiscoveryFilter] = useState<string>('all');
  const [showReflectionModal, setShowReflectionModal] = useState(false);
  const [reflectionHike, setReflectionHike] = useState<Hike | null>(null);
  const [reflectionEntry, setReflectionEntry] = useState<JournalEntry | null>(null);
  const [editingHikeName, setEditingHikeName] = useState<string | null>(null);
  const [hikeNameEdit, setHikeNameEdit] = useState<string>('');
  const [uploadingMedia, setUploadingMedia] = useState<string | null>(null);
  const [uploadProgress, setUploadProgress] = useState<Record<string, number>>({});
  const [uploadErrors, setUploadErrors] = useState<Record<string, { message: string; retry: () => void }>>({});
  const [validationError, setValidationError] = useState<{ message: string; context: string } | null>(null);

  const loadData = useCallback(async () => {
    try {
      setValidationError(null);
      
      const [completedHikesRes, activeHikesRes, achievementsRes, journalRes, favoritesRes] = await Promise.all([
        getHikes('completed'),
        getHikes('active'),
        getUserAchievements(),
        getJournalEntries(undefined, undefined, 100),
        getFavorites(),
      ]);
      
      // Validate API responses
      const completedHikesValidation = validateResponse(
        HikesResponseSchema,
        completedHikesRes.data,
        'Completed hikes response'
      );
      
      const activeHikesValidation = validateResponse(
        HikesResponseSchema,
        activeHikesRes.data,
        'Active hikes response'
      );
      
      const journalValidation = validateResponse(
        JournalEntriesResponseSchema,
        journalRes.data,
        'Journal entries response'
      );
      
      // Handle validation errors
      if (!completedHikesValidation.success) {
        setValidationError({
          message: completedHikesValidation.error,
          context: 'completed hikes',
        });
        return;
      }
      
      if (!activeHikesValidation.success) {
        setValidationError({
          message: activeHikesValidation.error,
          context: 'active hikes',
        });
        return;
      }
      
      if (!journalValidation.success) {
        setValidationError({
          message: journalValidation.error,
          context: 'journal entries',
        });
        return;
      }
      
      // Load full details for completed hikes to get media
      const completedHikesWithDetails = await Promise.all(
        (completedHikesValidation.data.hikes || []).map(async (hike: Hike) => {
          try {
            const hikeDetails = await getHike(hike.id);
            
            // Validate individual hike response
            const hikeValidation = validateResponse(
              HikeResponseSchema,
              hikeDetails.data,
              `Hike ${hike.id} details`
            );
            
            if (!hikeValidation.success) {
              console.error(`Validation failed for hike ${hike.id}:`, hikeValidation.error);
              return hike; // Fallback to original hike data
            }
            
            return hikeValidation.data.data || hike;
          } catch (error) {
            console.error(`Failed to load details for hike ${hike.id}:`, error);
            return hike;
          }
        })
      );
      
      setCompletedHikes(completedHikesWithDetails);
      setActiveHikes(activeHikesValidation.data.hikes || []);
      setAchievements(achievementsRes.data.achievements || []);
      
      const entries = journalValidation.data.entries || [];
      setJournalEntries(entries);
      
      // Filter trip plans
      const plans = entries.filter((e: JournalEntry) => e.entry_type === 'trip_plan');
      setTripPlans(plans);
      
      // Get favorites for upcoming trips
      setFavorites(favoritesRes.data?.favorites || []);
      
      // Collect all discoveries from completed hikes
      const discoveries: Discovery[] = [];
      completedHikesValidation.data.hikes?.forEach((hike: Hike) => {
        if (hike.discoveries) {
          discoveries.push(...(hike.discoveries as Discovery[]).map((d: Discovery) => ({ ...d, hike_id: hike.id, hike_name: hike.trail?.name })));
        }
      });
      // Also from journal entries
      journalValidation.data.entries.forEach((entry: JournalEntry) => {
        if (entry.meta_data?.discoveries) {
          discoveries.push(...(entry.meta_data.discoveries as Discovery[]).map((d: Discovery) => ({ ...d, journal_entry_id: entry.id })));
        }
      });
      setAllDiscoveries(discoveries);
      
      // Check if we're celebrating a completed hike
      const hikeId = searchParams.get('hike');
      const celebrate = searchParams.get('celebrate');
      if (hikeId && celebrate === 'true') {
        const completedHike = completedHikesValidation.data.hikes?.find((h: Hike) => h.id === hikeId);
        if (completedHike) {
          const hikeEntry = journalValidation.data.entries.find((e: JournalEntry) => e.hike_id === hikeId && e.entry_type === 'hike_summary');
          setCelebratingHike({ ...completedHike, journal_entry: hikeEntry } as any);
          setShowCelebration(true);
          setCurrentView('completed');
        }
      }
    } catch (error) {
      console.error('Failed to load data:', error);
    } finally {
      setLoading(false);
    }
  }, [searchParams]);

  useEffect(() => {
    if (!isLoading && !user) {
      router.push('/login');
      return;
    }

    if (user) {
      loadData();
    }
  }, [user, isLoading, router, loadData]);

  if (isLoading || !user) {
    return (
      <div className="min-h-screen flex items-center justify-center" style={{ backgroundColor: '#F6F8F7' }}>
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 mx-auto mb-4" style={{ borderColor: '#0F3D2E' }}></div>
          <p className="text-textSecondary">Loading journal...</p>
        </div>
      </div>
    );
  }

  // Calculate stats for hero summary
  const upcomingTrips = favorites.filter((f: Favorite) => {
    if (!f.planned_visit_date) return false;
    const visitDate = new Date(f.planned_visit_date);
    return visitDate >= new Date();
  }).length;
  
  const totalDiscoveries = allDiscoveries.length;
  const achievementsUnlocked = achievements.length;

  // Get user photos for background
  const userPhotos = completedHikes
    .flatMap((hike: Hike) => hike.media || [])
    .filter((m: Media) => m.type === 'photo' && m.url)
    .map((m: Media) => m.url)
    .slice(0, 8);

  // Handler functions - defined before return to avoid ReferenceError
  const handleSaveHikeName = useCallback(async (hikeId: string) => {
    if (!hikeNameEdit.trim()) return;
    
    try {
      await updateHike(hikeId, { name: hikeNameEdit.trim() });
      setEditingHikeName(null);
      setHikeNameEdit('');
      loadData(); // Reload to get updated data
    } catch (error) {
      console.error('Failed to update hike name:', error);
      alert('Failed to update hike name. Please try again.');
    }
  }, [hikeNameEdit, loadData]);

  const handleMediaUpload = useCallback(async (hikeId: string, file: File, type: 'photo' | 'video' | 'audio', retryCount = 0) => {
    const uploadKey = `${hikeId}-${file.name}-${type}`;
    setUploadingMedia(uploadKey);
    setUploadProgress(prev => ({ ...prev, [uploadKey]: 0 }));
    setUploadErrors(prev => {
      const newErrors = { ...prev };
      delete newErrors[uploadKey];
      return newErrors;
    });

    try {
      const response = await uploadHikeMedia(
        hikeId, 
        file, 
        type,
        (progress) => {
          setUploadProgress(prev => ({ ...prev, [uploadKey]: progress }));
        }
      );
      
      // Validate media response
      const mediaValidation = validateResponse(
        MediaResponseSchema,
        response.data,
        `Media upload for hike ${hikeId}`
      );
      
      if (!mediaValidation.success) {
        throw new Error(mediaValidation.error);
      }
      
      const newMedia = mediaValidation.data;
      
      // Optimistically update UI immediately
      setCompletedHikes(prev => prev.map(hike => {
        if (hike.id === hikeId) {
          return {
            ...hike,
            media: [...(hike.media || []), newMedia]
          };
        }
        return hike;
      }));
      
      // Clear upload state
      setUploadingMedia(null);
      setUploadProgress(prev => {
        const newProgress = { ...prev };
        delete newProgress[uploadKey];
        return newProgress;
      });
      
      // Reload to ensure consistency
      loadData();
    } catch (error: unknown) {
      console.error('Failed to upload media:', error);
      const errorMessage = (error as any)?.response?.data?.detail || (error as any)?.message || 'Failed to upload media';
      
      // Store error with retry function
      setUploadErrors(prev => ({
        ...prev,
        [uploadKey]: {
          message: errorMessage,
          retry: () => handleMediaUpload(hikeId, file, type, retryCount + 1)
        }
      }));
      
      setUploadingMedia(null);
      setUploadProgress(prev => {
        const newProgress = { ...prev };
        delete newProgress[uploadKey];
        return newProgress;
      });
    }
  }, [loadData]);

  return (
    <BackgroundSystem context="journal" userPhotos={userPhotos}>
      {/* Celebration Modal */}
      {showCelebration && celebratingHike && (
        <div className="fixed inset-0 bg-black/60 flex items-center justify-center z-50 p-4">
          <div 
            className="bg-white rounded-3xl p-8 max-w-2xl w-full max-h-[90vh] overflow-y-auto relative"
            style={{ border: '2px solid #F4A340' }}
          >
            <button
              onClick={() => setShowCelebration(false)}
              className="absolute top-4 right-4 text-textSecondary hover:text-text"
            >
              ‚úï
            </button>
            
            <div className="text-center mb-8">
              <div className="text-6xl mb-4">üéâ</div>
              <h2 className="text-4xl font-light mb-2 text-text">Hike Completed!</h2>
              <p className="text-xl text-textSecondary">
                {celebratingHike.trail?.name || (celebratingHike as any).name || 'Your Adventure'}
              </p>
            </div>
            
            <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
              {celebratingHike.distance_miles && (
                <div className="p-4 rounded-2xl text-center" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
                  <div className="text-2xl mb-2">üìè</div>
                  <div className="text-2xl font-light text-text">{celebratingHike.distance_miles.toFixed(2)}</div>
                  <div className="text-xs text-textSecondary">miles</div>
                </div>
              )}
              {celebratingHike.duration_minutes && (
                <div className="p-4 rounded-2xl text-center" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
                  <div className="text-2xl mb-2">‚è±</div>
                  <div className="text-2xl font-light text-text">
                    {Math.floor(celebratingHike.duration_minutes / 60)}h {celebratingHike.duration_minutes % 60}m
                  </div>
                  <div className="text-xs text-textSecondary">duration</div>
                </div>
              )}
              {celebratingHike.elevation_gain_feet && (
                <div className="p-4 rounded-2xl text-center" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
                  <div className="text-2xl mb-2">‚õ∞</div>
                  <div className="text-2xl font-light text-text">{Math.round(celebratingHike.elevation_gain_feet)}</div>
                  <div className="text-xs text-textSecondary">ft elevation</div>
                </div>
              )}
              {((celebratingHike as any).journal_entry as JournalEntry)?.meta_data?.discoveries_count !== undefined && (
                <div className="p-4 rounded-2xl text-center" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
                  <div className="text-2xl mb-2">ü¶å</div>
                  <div className="text-2xl font-light text-text">{((celebratingHike as any).journal_entry as JournalEntry).meta_data?.discoveries_count}</div>
                  <div className="text-xs text-textSecondary">discoveries</div>
                </div>
              )}
            </div>
            
            {((celebratingHike as any).journal_entry as JournalEntry)?.meta_data?.discoveries && (((celebratingHike as any).journal_entry as JournalEntry).meta_data?.discoveries as Discovery[]).length > 0 && (
              <div className="mb-8">
                <h3 className="text-xl font-light mb-4 text-text">Your Discoveries</h3>
                <div className="grid grid-cols-2 md:grid-cols-3 gap-3">
                  {(((celebratingHike as any).journal_entry as JournalEntry).meta_data?.discoveries as Discovery[]).map((discovery: Discovery, idx: number) => (
                    <div
                      key={idx}
                      className="p-3 rounded-xl text-center"
                      style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}
                    >
                      <div className="text-lg mb-1">
                        {discovery.type === 'wildlife' ? 'ü¶å' : 
                         discovery.type === 'plant' ? 'üåø' :
                         discovery.type === 'geology' ? 'ü™®' : 'üèõ'}
                      </div>
                      <div className="text-sm text-text capitalize">{discovery.type}</div>
                      {discovery.description && (
                        <div className="text-xs text-textSecondary mt-1">{discovery.description}</div>
                      )}
                    </div>
                  ))}
                </div>
              </div>
            )}
            
            {((celebratingHike as any).journal_entry as JournalEntry)?.meta_data?.voice_notes_count > 0 && (
              <div className="mb-8">
                <h3 className="text-xl font-light mb-4 text-text">Voice Notes</h3>
                <div className="p-4 rounded-2xl text-center" style={{ backgroundColor: '#FAFAF8', border: '1px solid #E8E8E3' }}>
                  <div className="text-3xl mb-2">üéô</div>
                  <div className="text-lg text-text">
                    {((celebratingHike as any).journal_entry as JournalEntry).meta_data?.voice_notes_count} voice note{((celebratingHike as any).journal_entry as JournalEntry).meta_data?.voice_notes_count !== 1 ? 's' : ''} recorded
                  </div>
                </div>
              </div>
            )}
            
            <div className="text-center p-6 rounded-2xl mb-6" style={{ backgroundColor: '#FFF8F0', border: '1px solid #F4A34040' }}>
              <div className="text-4xl mb-2">‚≠ê</div>
              <div className="text-lg font-medium text-text mb-1">Trail Completed</div>
              <div className="text-sm text-textSecondary">Your adventure has been saved to your journal</div>
            </div>
            
            <button
              onClick={() => {
                setShowCelebration(false);
                setCurrentView('completed');
                setExpandedHike(celebratingHike.id);
