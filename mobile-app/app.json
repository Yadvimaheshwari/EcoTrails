{
  "expo": {
    "name": "EcoAtlas",
    "slug": "ecoatlas",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D4739"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ecoatlas.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D4739"
      },
      "package": "com.ecoatlas.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset"
    ],
    "scheme": "ecoatlas",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "linking": {
      "prefixes": [
        "ecoatlas://",
        "https://ecoatlas.app"
      ],
      "config": {
        "screens": {
          "Main": {
            "screens": {
              "Explore": {
                "path": "explore",
                "screens": {
                  "TrailList": "",
                  "TrailDetail": "trail/:trailId",
                  "ParkDetail": "park/:parkId",
                  "SavedTrails": "saved"
                }
              },
              "Map": {
                "path": "map",
                "screens": {
                  "MapView": "",
                  "TrailDetail": "trail/:trailId",
                  "ParkDetail": "park/:parkId"
                }
              },
              "RecordHike": {
                "path": "record",
                "screens": {
                  "RecordHikeHome": "",
                  "TrailSelection": "select"
                }
              },
              "Activity": {
                "path": "activity",
                "screens": {
                  "ActivityList": "",
                  "HikeDetail": "hike/:hikeId",
                  "PostHike": "insights/:hikeId",
                  "Replay3D": "replay/:hikeId",
                  "Statistics": "statistics"
                }
              },
              "Profile": {
                "path": "profile",
                "screens": {
                  "ProfileHome": "",
                  "Settings": "settings",
                  "WearableDevices": "wearables",
                  "EcoDroidDevices": "ecodroid",
                  "About": "about"
                }
              }
            }
          },
          "ActiveHike": "record/active/:sessionId"
        }
      }
    }
  }
}
